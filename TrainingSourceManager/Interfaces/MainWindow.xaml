<Window x:Class="TrainingSourceManager.Interfaces.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainingSourceManager.Interfaces"
        xmlns:viewModels="clr-namespace:TrainingSourceManager.Presenters.MainWindow.ViewModels"
        xmlns:ext="clr-namespace:TrainingSourceManager"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800" 
        Loaded="Window_Loaded"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid DataContext="{Binding Presenter}">
        <!--{ext:NameOf Type={x:Type local:MainWindow}, Member=_presenter}-->
        <ToolBarPanel DockPanel.Dock="Top">
            <ToolBar ToolBarTray.IsLocked="True" >
                <Menu ToolBar.OverflowMode="Never">
                    <MenuItem Header="File" VerticalContentAlignment="Center" Click="MenuItem_Click" />
                    <MenuItem Header="New" VerticalContentAlignment="Center" />
                    <CheckBox Name="CrossNestCheckbox" Content="Cross-Nest" IsChecked="{Binding CrossNest}" />
                </Menu>
            </ToolBar>
        </ToolBarPanel>

        <TreeView Name="SourceTree" Margin="0,33,0,0" HorizontalContentAlignment="Stretch" ItemsSource="{Binding SourceTreeEntries}" BorderThickness="0" Grid.ColumnSpan="4">
            <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type viewModels:CategoryTreeEntry}" ItemsSource="{Binding Entries}">
                        <StackPanel Orientation="Horizontal">
                            <Label VerticalAlignment="Center" FontFamily="WingDings" Content="1"/>
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:SourceTreeEntry}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="0.3*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox IsChecked="{Binding Selected}" VerticalContentAlignment="Center" Grid.Column="0" />
                            <Label VerticalAlignment="Center" FontFamily="WingDings" Grid.Column="1" Content="2"/>
                            <TextBlock Text="{Binding Name}" Grid.Column="2" />
                            <TextBlock Text="{Binding Tags}" Grid.Column="3" />
                        </Grid>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>

    </Grid>
</Window>
